<%- include('./partials/header'); -%>
<div style="margin-top:2px;" class="container-fluid">
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Batch #</th>
      <th scope="col">Name</th>
      <th scope="col">Item / Cotton</th>
      <th scope="col"># Cotton</th>
	  <th scope="col">Price / Cotton</th>
	  <th scope="col">Price / Item</th>
	  <th scope="col">Purchase Date</th>
	  <th scope="col">Edit</th>
	  <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
	<% 
	  var i = 0;
	  company.purchase.forEach(function(purchase){ 
	%>
    <tr>
      <td><strong><%=purchase.batch%></strong></td>
      <td><%=purchase.name%></td>
      <td><%=purchase.itemPerCtn%></td>
	  <td><%=purchase.numCtn%></td>
	  <td>Rs. <%=purchase.priceCtn%></td>
	  <td>Rs. <%=purchase.priceItem%></td>
	  <td><%=purchase.perDate.toDateString()%></td>
	  <td><a href ="/companies/<%=company._id%>/purchase/<%=purchase._id%>/edit" class="btn btn-outline-warning my-2 my-sm-0">Edit</a></td>
	  <td>
	    <form id="delete-form" action="/companies/<%= company._id %>/purchase/<%= purchase._id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger my-2 my-sm-0">Delete</button>
        </form>
	  </td>
    </tr>
	<%i++;  }); %>
  </tbody>
</table>
</div>
<%- include('./partials/footer'); -%>