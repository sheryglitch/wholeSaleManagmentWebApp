<%- include('./partials/header'); -%>
<div style="margin-top:10vh;" class="container">
	<div class="row">
		<div class="col-9 text-center my-auto card p-5 mx-auto text-white bg-dark">
			<h2 class="text-center mb-4 text-info">UPDATE <%= item.name %></h2>  
 <form action="/companies/<%=company_id%>/purchase/<%=item._id%>?_method=PUT" method="POST">  
      <div class="form-group"> <input type="text" name="item[batch]" placeholder="Item Batch" class="form-control input-lg" value="<%=item.batch%>" required> </div>  
      <div class="form-group"> <input type="text" name="item[name]" placeholder="Item Name" class="form-control h-25" value="<%=item.name%>" required> </div>  
	 <div class="form-group"> <input type="number" name="item[itemPerCtn]" placeholder="Items Per Cotton" class="form-control input-lg" id="address" value="<%=item.itemPerCtn%>" required> </div> 
	 <div class="form-group"> <input type="number" name="item[numCtn]" placeholder="Number Of Cotton" class="form-control input-lg" id="address" value="<%=item.numCtn%>" required> </div> 
	 <div class="form-group"> <input type="text" name="item[priceCtn]" placeholder="Price Per Cotton" class="form-control h-25" value="<%=item.priceCtn%>" required> </div>
	 <div class="form-group"> <input type="date" name="item[perDate]" placeholder="Date Of Purchase" class="form-control h-25"  value="<%=item.perDate.toDateString()%>" required> </div>
	 
       <button type="submit" class="btn btn-info form-control">UPDATE ITEM</button> 
			</form>  
	   <a href="/companies/<%=company_id%>/purchase/details" class="btn btn-info form-control mt-2">CANCEL</a> 
			</div>
		</div>
	</div>
<%- include('./partials/footer'); -%>