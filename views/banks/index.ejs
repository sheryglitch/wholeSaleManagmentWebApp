<%- include('../partials/header'); -%>
<div style="margin-top:2px;" class="container-fluid">
	<a href="/banks/new" type="button" class="btn btn-dark form-control">Add New Bank</a>
<table class="table table-striped table-dark">
  <thead>
    <tr>
	  <th scope="col">#</th>
      <th scope="col">Banks Name</th>
      <th scope="col">Bank Account</th>
      <th scope="col">Account Title</th>
	  <th scope="col">Edit</th>
	  <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
	<% 
	  var i = 1;
	  banks.forEach(function(bank){ 
	%>
    <tr>
      <th scope="row"><%=i%></th>
      <td><%=bank.name%></td>
      <td><%=bank.account%></td>
      <td><%=bank.title%></td>
	  <td><a href ="banks/<%=bank._id%>/edit" class="btn btn-outline-warning my-2 my-sm-0">Edit</a></td>
	  <td>
	    <form id="delete-form" action="/banks/<%= bank._id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger my-2 my-sm-0">Delete</button>
        </form>
	  </td>
    </tr>
	<%i++;  }); %>
  </tbody>
</table>
 
</div>
<%- include('../partials/footer'); -%>