<%- include('./partials/header'); -%>
<div style="margin-top:20vh;" class="container">
	<div class="row">
		<div class="col-9 text-center my-auto card p-5 mx-auto text-white bg-dark">
			<h2 class="text-center mb-4 text-info">UPDATE <%= company.name %></h2>  
 <form action="/companies/<%=company._id %>?_method=PUT" method="POST">  
      <div class="form-group"> <input type="text" name="company[name]" placeholder="Company Name" class="form-control input-lg" id="cname" value="<%=company.name %>" required> </div>  
      <div class="form-group"> <input type="text" name="company[bankAccount]" placeholder="Bank Account Number" class="form-control h-25" id="pwd" value="<%=company.bankAccount %>" required> </div>  
	 <div class="form-group"> <input type="text" name="company[address]" placeholder="Address" class="form-control input-lg" id="address" value="<%=company.address %>" required> </div>  
       <button type="submit" class="btn btn-info form-control">UPDATE NOW</button> 
			</form>  
	   <a href="/companies" class="btn btn-info form-control mt-2">CANCEL</a> 
			</div>
		</div>
	</div>
<%- include('./partials/footer'); -%>