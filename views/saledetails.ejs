<%- include('./partials/header'); -%>
<div style="margin-top:2px;" class="container-fluid">
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Batch #</th>
      <th scope="col">Name</th>
		<th scope="col">Number Of Items</th>
      <th scope="col">Price / Item</th>
      <th scope="col">Total Price</th>
	  <th scope="col">Sale Date</th>
	  <th scope="col">Edit</th>
	  <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
	<% 
	  var i = 0;
	  shop.sale.forEach(function(sale){ 
	%>
    <tr>
      <td><strong><%=sale.batch%></strong></td>
      <td><%=sale.name%></td>
      <td><%=sale.numItem%></td>
	  <td><%=sale.salePricePerItem%></td>
	  <td>Rs. <%=sale.salePriceTotal%></td>
	  <td><%=sale.saleDate.toDateString()%></td>
	  <td><a href ="/shops/<%=shop._id%>/sale/<%=sale._id%>/edit" class="btn btn-outline-warning my-2 my-sm-0">Edit</a></td>
	  <td>
	    <form id="delete-form" action="/shops/<%= shop._id %>/sale/<%= sale._id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger my-2 my-sm-0">Delete</button>
        </form>
	  </td>
    </tr>
	<%i++;  }); %>
  </tbody>
</table>
</div>
<%- include('./partials/footer'); -%>